<!-- Register Section -->
<section id="register">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1>Utwórz konto w serwisie</h1>
                <hr class="star-light star-even">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-5 hello">
                <img src="~/Resources/logo_STARE.png" class="img-responsive" />
            </div>
            <div class="col-lg-7">

                <form class="form-horizontal" role="form" method="POST" action="/LoggedIn/Register">
                    <div class="form-group">
                        <label for="loginName" class="col-sm-5 control-label">Nazwa użytkownika (login):</label>
                        <div class="col-sm-7">
                            <input type="text" class="form-control" placeholder="Login" name="login">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="loginName" class="col-sm-5 control-label">Wprowadź hasło:</label>
                        <div class="col-sm-7">
                            <input type="password" class="form-control" placeholder="Password" name="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="loginName" class="col-sm-5 control-label">Potwierdź wprowadzone hasło:</label>
                        <div class="col-sm-7">
                            <input type="password" class="form-control" placeholder="Password" name="confirmPassword">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-12">
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBox("termsOfUse", new {Value = true}) Oświadczam, że zapoznałem/am się i akceptuję
                                    <a id="terms-of-use-link" href="#" data-toggle="modal" data-target=".bs-example-modal-lg">Regulamin</a>
                                     serwisu StudentNotes.
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">
                        @*@Html.ActionLink("Zarejestruj się", "LoggedIn", "LoggedIn", null, new { @class = "btn btn-success", type = "button", style = "border-radius:0px; width:inherit;" })*@
                        <input type="submit" value="Zarejestruj się" class="btn btn-success" style="border-radius: 0px; width: inherit;" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</section>


